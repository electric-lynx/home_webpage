---
import hero_images from "./data/hero_images.json";
import { Text, Image } from "../../global";
---

<Text tag="h1" cssUtil={["neon", "heading"]}>
  Electric Lynx <Text cssUtil={["flicker", "neon"]}>LLC</Text>
</Text>
<Text tag="h2" cssUtil={["centered"]}>Dropping in 2023</Text>

<Image
  imgType={hero_images.neonReleaseLogo}
  image_sizes={hero_images.image_widths}
/>
<Text tag="h2" cssUtil={["centered"]}>Modern Web Developement Company</Text>
<div class="container">
  <Text tag="p">
    At Electric Lynx, we specialize in infusing modern web technology to give
    your website a cutting-edge and compelling look. Our mission is to redefine
    digital experiences, ensuring your business stands out in the digital
    landscape.
  </Text>
</div>

<style>
  @media screen and (min-width: 600px) {
    .container {
      width: 75%;
    }
  }
  .subtitle_bold {
    font-size: 2em;
    text-transform: uppercase;
    font-weight: 900;
  }
</style>
