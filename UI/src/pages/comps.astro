---
import Layout from "../layouts/Layout.astro";
import { LogoTitle } from "@components/blocks";

// Not need to be index byt robots

//     --color-bg: 3 7 18;
//     --color-box: 17 24 39;
//     --box-border: 243 244 246/0.1;
//     --box-sd: transparent;
---

<Layout title="Welcome to AgenceX">
  <div id="logo" class="pt-20 flex flex-col gap-8 m-12">
    <h2 class="font-lg border text-center p-10">LOGO</h2>
    <h3>Base</h3>
    <LogoTitle />
    <h3>small size</h3>
    <LogoTitle size="sm" />
    <h3>Text only</h3>
    <LogoTitle variant="text" />
    <h3>Icon only</h3>
    <LogoTitle variant="icon" />
  </div>
  <div class="flex flex-col justify-center items-center gap-8">
    <h2 class="font-lg border text-center p-10">colors</h2>

    <ul class="flex flex-col justify-center items-center gap-8">
      <li class="text-heading-3 w-60 text-center h-20 outline">
        --heading-1: 255 255 255
      </li>
      <li class="text-heading-1 w-60 text-center h-20 outline">
        --heading-2: 243 244 246;
      </li>
      <li class="text-heading-1 w-60 text-center h-20 outline">
        --heading-3: 209 213 219;
      </li>
      <li class="text-color-bg w-60 text-center h-20 outline">
        --color-bg: 3 7 18;
      </li>
      <li class="bg-color-box: 17 24 39 w-60 text-center h-20 outline">
        --color-box: 17 24 39;
      </li>
    </ul>
  </div>
</Layout>
<style>
  h2,
  h3 {
    color: cadetblue;
    margin: 15px 5px;
    font-weight: 900;
    font-size: 2em;
  }
</style>
