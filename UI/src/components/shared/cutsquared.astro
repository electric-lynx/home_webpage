---
interface Props {
  className?: string;
  variant: "primary" | "secondary" | "form";
  navigateTo?: string;
}

let { variant = "primary", className, navigateTo } = Astro.props;

const styles = {
  hover: "",
  active: "",
  base: "text-heading-3 bg-sub-background",
};
---

<div>
  <slot />
</div>

<style>
  div {
    position: relative; /* this one is new - used to contain absolute elements */
    width: 200px;
    height: 80px;
    background-color: #522d5b;
  }
  div:after {
    content: "";
    position: absolute;
    margin: -20px;
    width: 40px;
    height: 40px;
    transform: rotate(45deg);
    background-color: #fff; /* to see where it is */
    top: 0;
    right: 0;
  }
  div {
    /* other styles */
    overflow: hidden;
  }

  div:after {
    /* other styles */
    box-shadow: 0 0 0 250px var(--main_white);
  }
</style>
