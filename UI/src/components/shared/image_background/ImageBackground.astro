---
const { h } = Astro.props;
---

<div class="scrolling-image-container">
  <div class="scrolling-image"></div>
  <div class="content_cover">
    <slot />
  </div>
</div>

<style>
  .scrolling-image-container {
    position: relative;
    overflow: hidden;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vw;
  }
  .content_cover {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
  .scrolling-image {
    background: url("./images/logos/electriclynxlogo-justlynx-shadow_bg.png")
      repeat;
    height: 100%;
    width: 7680px;
    /* animation: slideL2R linear 20ms alternate infinite; */
  }
  @keyframes slideL2R {
    0% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(15px);
    }
  }
</style>
